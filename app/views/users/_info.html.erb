<table class='table'>
  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.following.count, following_user_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, followers_user_path(user.id) %></th>
  </tr>
</table>

  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <% relationship = relationships.find_by(followed_id: user.id)%>
      <%= form_with model: relationship, method: :delete, local: true do |f| %>
        <%= f.hidden_field :followed_id, value: user.id %>
        <%= f.submit "Unfollow" %>
      <% end %>
    <% else %>
      <%= form_with model: set_relationship, url: relationships_path, local: true do |f| %>
        <%= f.hidden_field :follow_id, value: user.id %>
        <%= f.submit "Follow" %>
      <% end %>
    <% end %>
  <% end %>

<% if current_user == user %>
  <div class='row'>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>
<% end %>