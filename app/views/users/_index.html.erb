<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td>Fllowing : <%= link_to user.following.count, following_user_path(user.id) %></td>
        <td>Follower : <%= link_to user.followers.count, followers_user_path(user.id) %></td>
        <td>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <% relationship = relationships.find_by(followed_id: user.id)%>
              <%= form_with model: relationship, method: :delete, local: true do |f| %>
                <%= f.hidden_field :followed_id, value: user.id %>
                <%= f.submit "Unfollow" %>
              <% end %>
            <% else %>
              <%= form_with model: set_relationship, url: relationships_path, local: true do |f| %>
                <%= f.hidden_field :follow_id, value: user.id %>
                <%= f.submit "Follow" %>
              <% end %>
            <% end %>
          <% end %>
        </td>

        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
